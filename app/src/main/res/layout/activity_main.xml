<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/your_name"
    tools:context="com.example.rahul.background.MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:id="@+id/profile_image3"
        android:src="@drawable/contact"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFFFF"
        android:clickable="true"
        android:layoutAnimation = "@anim/layout_item_slide_in"
        android:layout_alignTop="@+id/profile_image2"
        android:layout_alignLeft="@+id/profile_image1"
        android:layout_alignStart="@+id/profile_image1"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:id="@+id/profile_image"
        android:src="@drawable/upcoming"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFFFF"
        android:clickable="true"
        android:layoutAnimation = "@anim/layout_item_slide_in"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="right"
        android:id="@+id/profile_image1"
        android:src="@drawable/events"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFFFF"
        android:onClick="onClick"
        android:clickable="true"
        android:layoutAnimation = "@anim/layout_item_slide_in"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:id="@+id/profile_image2"
        android:src="@drawable/members"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFFFF"
        android:clickable="true"
        android:layoutAnimation = "@anim/layout_item_slide_in"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/profile_image"
        android:layout_alignStart="@+id/profile_image" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming"
        android:fontFamily="cursive"
        android:textSize="20dp"
        android:textColor="#FF000000"
        android:textStyle="bold"
        android:layoutAnimation = "@anim/layout_item_slide_in"
        android:layout_below="@+id/profile_image"
        android:layout_alignLeft="@+id/profile_image"
        android:layout_alignStart="@+id/profile_image"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Events"
        android:fontFamily="cursive"
        android:textSize="20dp"
        android:textColor="#FF000000"
        android:textStyle="bold"
        android:layoutAnimation = "@anim/layout_item_slide_in"
        android:layout_below="@+id/profile_image1"
        android:layout_alignLeft="@+id/profile_image1"
        android:layout_alignStart="@+id/profile_image1"
        android:layout_marginTop="13dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members"
        android:fontFamily="cursive"
        android:textSize="20dp"
        android:textColor="#FF000000"
        android:textStyle="bold"
        android:layoutAnimation = "@anim/layout_item_slide_in"
        android:layout_below="@+id/profile_image2"
        android:layout_alignLeft="@+id/profile_image2"
        android:layout_alignStart="@+id/profile_image2"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:fontFamily="cursive"
        android:textSize="20dp"
        android:textColor="#FF000000"
        android:textStyle="bold"
        android:layoutAnimation = "@anim/layout_item_slide_in"
        android:layout_below="@+id/profile_image3"
        android:layout_alignLeft="@+id/profile_image3"
        android:layout_alignStart="@+id/profile_image3"
        android:layout_marginTop="13dp" />
</RelativeLayout>
